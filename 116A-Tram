#include <iostream>
using namespace std;
int main(){
    int n,a=0,b=0;
    cin>>n;
    int current=0;
    int capacity=0;
    while(n){
        cin>>a>>b;
        current=current-a;
        current=current+b;
        if(current>capacity){
            capacity=current;
        }
        n--;
    }
    cout<<capacity<<endl;
    return 0;
}
